{
    "manifest_version": 2,
    "name": "Smog Alert",
    "version": "1.0",
    "description": "Displays information about air pollutions in Krakow and nearby areas",

    "icons": {
        "19": "/resource/img/icon_19.png",
        "38": "/resource/img/icon_38.png",
        "64": "/resource/img/icon_64.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "/resource/img/icon_19.png",
            "38": "/resource/img/icon_38.png",
            "64": "/resource/img/icon_64.png"
        },
        "default_title": "Smog Alert",
        "default_popup": "/src/web/main/html/popup.html"
    },
    "permissions": ["storage", "alarms", "notifications"],
    "background": {
        "scripts": [
            "/lib/jquery-2.1.0.min.js",
            "/lib/jquery.formatDateTime.js",
            "/src/web/commons/smogApi.js",
            "/src/web/commons/objectUtils.js",
            "/src/web/commons/storage.js" ,
            "/src/web/background/notifications.js",
            "/src/web/background/alarms.js",
            "/src/web/background/dataRefreshers.js",
            "/src/web/background/backgroundPage.js"],
        "persistent": false
    }
}